<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_x4"
            android:layout_marginBottom="-32dp"
            android:background="@drawable/background_header"
            android:elevation="@dimen/margin_x4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/txtRegistrationTaxesLabel"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_x4"
            android:text="@string/app_name"
            android:elevation="@dimen/margin_x4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtAnnualTaxesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_x4"
            android:layout_marginStart="@dimen/margin_x10"
            android:text="annual taxes"
            android:elevation="@dimen/margin_x4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTitle" />

        <TextView
            android:id="@+id/txtAnnualTaxesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_x4"
            android:layout_marginEnd="@dimen/margin_x10"
            android:text="9'999 €"
            android:elevation="@dimen/margin_x4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/txtAnnualTaxesLabel" />

        <TextView
            android:id="@+id/txtRegistrationTaxesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_x2"
            android:layout_marginStart="@dimen/margin_x10"
            android:text="registration taxes"
            android:elevation="@dimen/margin_x4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtAnnualTaxesLabel" />

        <TextView
            android:id="@+id/txtRegistrationTaxesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_x4"
            android:layout_marginEnd="@dimen/margin_x10"
            android:text="99'999 €"
            android:elevation="@dimen/margin_x4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/txtRegistrationTaxesLabel" />

        

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>