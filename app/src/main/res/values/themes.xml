<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TaxesAutomobiles" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/background_main</item>
        <item name="android:windowLightStatusBar">@bool/is_light_icons</item>

        <item name="android:fontFamily">@font/roboto_slab_light</item>
        <item name="android:textColor">@color/text_normal</item>
        <!--<item name="android:textSize">@dimen/text_size</item>-->
    </style>

    <style name="BottomSheetPopupTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetPopup</item>
    </style>

    <style name="BottomSheetPopup" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_dialog</item>
    </style>

    <style name="Label" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_slab_light</item>
        <item name="android:textColor">@color/text_label</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Value" parent="Label">
        <item name="android:fontFamily">@font/roboto_slab_medium</item>
        <item name="android:textColor">@color/text_value</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="Label.Title" parent="Label">
        <item name="android:fontFamily">@font/roboto_slab_medium</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="Label.AppTitle" parent="Label.Title" />

    <style name="Label.TaxInput" parent="Label">
        <item name="android:layout_marginStart">@dimen/margin_x8</item>
        <item name="android:layout_marginTop">@dimen/margin_x8</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="Label.Taxes" parent="Label">
        <item name="android:textSize">@dimen/text_tax_label_size</item>
    </style>

    <style name="Label.Taxes.Value" parent="Value">
        <item name="android:textSize">@dimen/text_tax_label_size</item>
    </style>

    <style name="Label.Link" parent="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorLink">@color/text_link</item>
        <item name="android:fontFamily">@font/roboto_slab_medium</item>
    </style>


    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/button_tint</item>
        <item name="android:fontFamily">@font/roboto_slab_medium</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="Button.Dialog" parent="Button">
        <item name="android:layout_margin">@dimen/margin_x8</item>
    </style>

    <style name="ChipValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_x4</item>
        <item name="chipStartPadding">@dimen/margin_x2</item>
        <item name="chipEndPadding">@dimen/margin_x2</item>
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:fontFamily">@font/roboto_slab_medium</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textAppearance">@style/Value</item>
    </style>

    <style name="ChipSelection" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipStartPadding">@dimen/margin_x2</item>
        <item name="chipEndPadding">@dimen/margin_x2</item>
        <item name="android:backgroundTint">@color/chip_background_color</item>
        <item name="android:fontFamily">@font/roboto_slab_medium</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textAppearance">@style/Value</item>
    </style>

</resources>